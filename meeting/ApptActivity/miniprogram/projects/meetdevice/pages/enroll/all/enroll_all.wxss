@import "../../../style/skin.wxss";

page {
	background-color: #fff;
}

.main-enroll-detail {
	width: 100%;
}

.hint {
	width: 100%;
	padding: 0 30rpx;
	font-size: 24rpx;
	color: var(--orange)
}


.date-fixed {
	position: fixed;
	top: 0;
	background-color: #fff;
	width: 100%;
}

.day-mask {
	width: 100%;
	height: 190rpx;
	background-color: #fff;
}

.no-appt {
	display: flex;
	flex-direction: column;
	width: 100%;
	padding: 10rpx 30rpx;
	text-align: center;
	font-size: 30rpx;
	color: #999;
	margin-top: 50rpx;
} 


.date-cmpt .date-select .item.cur { 
	background-color: #f8f8f8 !important;
    border: 2rpx solid var(--projectColor) !important;
}

.time-table .right-list .right-inner .right.selected {
    background: #f8f8f8!important; 
    color: #999!important;
}

.date-select .item.cur::after,.time-table .right-list .right-inner .right.selected::after {
	background-image: url(data:image/png;base64,) !important;
}
  
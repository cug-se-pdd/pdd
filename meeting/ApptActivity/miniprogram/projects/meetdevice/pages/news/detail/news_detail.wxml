<view wx:if="{{isLoad===null}}" class="margin-top load notexist text-l load-project"></view>
<view wx:if="{{isLoad===false}}" class="margin-top load loading text-l load-project"></view>

<block wx:if="{{isLoad}}">
	<view class="main padding-project">
		<view class="article-box margin-top-xs">
			<!-- article content begin -->
			<view class="article card-project shadow-project">
				<view class="title"><text user-select="true">{{news.NEWS_TITLE}}</text></view>
				<!-- <view class="time"> {{news.NEWS_ADD_TIME}} {{news.NEWS_CATE_NAME}} </view>  -->
        <view class="info">
          <view class="time"> {{news.NEWS_ADD_TIME}} {{news.NEWS_CATE_NAME}} </view> 
          <view class="participant">
            <view class="label">参与人数：</view>
            <view class="count">{{news.NEWS_NUM}} 人</view>
          </view>
        </view>

				<block wx:for="{{news.NEWS_CONTENT}}" wx:key="key">
					<view class="content" wx:if="{{item.type=='text'}}">
						<text user-select="{{true}}">{{item.val}}</text>
					</view>

					<view class="pics" wx:if="{{item.type=='img'}}">
						<image bindtap="url" data-type='img' data-url="{{item.val}}" show-menu-by-longpress="{{true}}" class="loading" mode='widthFix' lazy-load="true" src="{{item.val}}">
						</image>
					</view>
				</block>
				<!-- article content end -->

			</view>
			<!-- article content end -->
      <!---预约按钮实现-->
      <view class="reserve-btn">
        <button bindtap="reserveActivity" class="reserve-btn-style">
            <image src="../../../images/预约图标.png" class="bookIcon"></image>
            <text class="bookText">我要预约</text>
        </button>
    </view>
		</view>

	</view> 

	<cmpt-detail mode="mode1" topBtnShow="{{topBtnShow}}" oid="{{news._id}}" cate="{{news.NEWS_CATE_NAME}}" title="{{news.NEWS_TITLE}}" cover="{{news.NEWS_PIC[0]}}" qr="{{news.NEWS_QR}}" desc="查看详情"  bg="{{skin.PROJECT_COLOR}}" color="red"></cmpt-detail>
</block>